<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <!--<property name="connection.driver_class">com.mysql.jdbc.Driver</property>-->
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <!-- JDBC connection pool settings ... using built-in test pool -->
        <property name="connection.pool_size">10</property>
        <!-- Select our SQL dialect -->
        <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="hibernate.dialect.storage_engine">innodb</property>
        <!-- Echo the SQL to stdout -->
        <property name="show_sql">true</property>
        <!-- Set the current session context -->
        <property name="current_session_context_class">thread</property>
        <!-- dbcp connection pool configuration -->
        <property name="hibernate.dbcp.initialSize">5</property>
        <property name="hibernate.dbcp.maxTotal">20</property>
        <property name="hibernate.dbcp.maxIdle">10</property>
        <property name="hibernate.dbcp.minIdle">5</property>
        <property name="hibernate.dbcp.maxWaitMillis">-1</property>

        <property name="connection.url">jdbc:mysql://localhost:3306/hospital?useSSL=false</property>
        <property name="connection.username">root</property>
        <property name="connection.password">MyNewPass</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="hibernate.hbm2ddl.auto">create-drop</property>

        <mapping class="ro.utcluj.server.model.Staff"/>
        <mapping class="ro.utcluj.server.model.Doctor"/>
        <mapping class="ro.utcluj.server.model.Patient"/>
        <mapping class="ro.utcluj.server.model.Consultation"/>

    </session-factory>
</hibernate-configuration>